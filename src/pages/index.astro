---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Ohlan AI Blog">
  <h1 class="text-3xl font-bold">Ohlan AI Blog</h1>
  <p class="mt-4 text-gray-400">Automatically generated articles about AI tools, SaaS apps, and crypto trends.</p>

  <ul class="mt-6 space-y-2">
    {Astro.glob('../content/posts/*.md').map(post => (
      <li><a href={`/posts/${post.slug}/`} class="text-blue-400 underline">{post.title}</a></li>
    ))}
  </ul>
</Layout>
